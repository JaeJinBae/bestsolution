	font-weight: bold;
	margin: 0 auto;
	
}
.list_wrap{
	width: 100%;
	margin: 100px 0;
}
.list_wrap > ul{
	width: 100%;
	overflow: hidden;
}
.list_wrap > ul > .item{
	/* display: inline-block; */
	width: 250px;
	height: 300px;
	border: 1px solid #efefef;
	float: left;
	margin-left: 60px;
	margin-bottom: 60px;
}
.list_wrap > ul > .item:first-child, .list_wrap > ul > .item:nth-child(5){
	margin-left: 0px;
}
.list_wrap > ul > .item > a{
	position: relative;
	display: inline-block;
	width: 100%;
	height: 100%;
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center center;
}
.list_wrap > ul > .item > a:before{
	opacity: 0;
	position: absolute;
	display: inline-block;
	content: '';
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	background: rgba(0,0,0,0.7);
	z-index: 2;
	-webkit-transition: all 0.3s ease-in-out;
	-moz-transition: all 0.3s ease-in-out;
	-ms-transition: all 0.3s ease-in-out;
	-o-transition: all 0.3s ease-in-out;
	transition: all 0.3s ease-in-out;
}
.list_wrap > ul > .item > a:after{
	opacity: 0;
	position: absolute;
	display: inline-block;
	content: '자세히 보기';
	padding: 10px 20px;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background: #172b4d;
	color: #fff;
	font-weight: 700;
	font-size: 15px;
	z-index: 3;
	-webkit-transition: all 0.3s ease-in-out;
	-moz-transition: all 0.3s ease-in-out;
	-ms-transition: all 0.3s ease-in-out;
	-o-transition: all 0.3s ease-in-out;
	transition: all 0.3s ease-in-out;
}
.list_wrap > ul > li.item a:hover::before,
.list_wrap > ul > li.item a:hover::after{opacity:1;}
.list_wrap > ul > .item > a > b{
	position: absolute;
	bottom: 0;
	width: 100%;
	padding: 15px 0;
	font-size: 15px;
	text-align: center;
	background: #efefef;
}
#board-pagenation{
	width: 100%;
	margin: 30px auto 100px auto;
	text-align: center;
}
#board-pagenation a {
	position: relative;
